<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Border color -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="?attr/colorPrimary"/> <!-- Ganti dengan warna border yang diinginkan -->
            <corners android:radius="4dp"/> <!-- Sesuaikan radius dengan CardView -->
        </shape>
    </item>
    <!-- Card color -->
    <item android:left="2dp" android:right="2dp" android:top="2dp" android:bottom="2dp">
        <shape android:shape="rectangle">
            <solid android:color="?attr/colorOnPrimary"/> <!-- Ganti dengan warna background CardView -->
            <corners android:radius="4dp"/>
        </shape>
    </item>
</layer-list>